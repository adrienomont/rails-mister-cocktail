<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="product">
        <% if @cocktail.photo? %>
        <img src="<%= @cocktail.photo %>" class="product-image hidden-xs">
        <% else %>
        <img src="http://heroparis.fr/wp-content/uploads/2016/04/cocktail-tendance-ete-2016-hero-paris.jpg" class="product-image hidden-xs">
        <% end %>
        <div class='product-body'>
          <h3><%= @cocktail.name %></h3>
            <ul>
              <% @cocktail.doses.each do |dose| %>
                <li><%= dose.description %> of <%= dose.ingredient.name %>
                  <%= link_to dose_path(dose), method: :delete do %>
                  <i class="fa fa-times"></i>
                <% end %>
                </li>
              <% end %>
            </ul>
        </div>
      </div>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <p><%= f.input :description %> of <%= f.association :ingredient %></p>
        <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>








