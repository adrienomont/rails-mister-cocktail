<div class="container text-center">
  <h2> <%= @cocktail.name %></h2>

  <% @cocktail.doses.each do |r| %>
    <div class="product list-inline">
      <ul class='product-body'>
        <h3><%= r.description %></h3>
        <p><%= r.ingredient.name %></p>
      </ul>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li><a href=""><i class="fa fa-pencil"></i></a></li>
        <li>
        <%= link_to "delete", cocktail_dose_path(@cocktail, r), method: :delete, class: "btn btn-primary" %>
        </li>
      </ul>
    </div>
  <% end %>

  <%= link_to 'Back', cocktails_path, class: "btn btn-danger"%>

    <%= link_to "New dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

</div>




